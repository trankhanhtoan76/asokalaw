<aside class="main-sidebar sidebar-light-primary elevation-1 sidebar-no-expand">
    <a href="{{ base_url }}/admin" class="brand-link">
        <img src="{{ base_url }}/app/assets/dist/img/hardware-chip.svg" class="brand-image img-circle" style="width:20px;margin-left:15px;margin-top:5px;"/>
        <span class="brand-text font-weight-light" style="margin-left:17px">{{ lang('LBL_KT_ADMIN') }}</span>
    </a>
    <div class="sidebar">
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column nav-child-indent nav-compact nav-flat" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item">
                    <a href="{{ base_url }}/admin" class="nav-link {% if app.uri.cur_uri=='admin' %}active{% endif %}">
                        <i class="nav-icon fal fa-tachometer-alt "></i>
                        <p>{{ lang('LBL_DASHBOARD') }}</p>
                    </a>
                </li>
                {% for menu in app.menu %}
                    <li class="nav-item">
                        <a href="{{ menu.link }}" class="nav-link {% if app.uri.uri[1]==menu.module %}active{% endif %}">
                            <i class="nav-icon {{ app.list_module[menu.module].icon }}"></i>
                            <p>{{ lang(menu.label) }}</p>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>
</aside>