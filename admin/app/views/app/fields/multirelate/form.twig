<div class="col-md-{% if span==12 %}12{% else %}6{% endif %}">
    <div class="form-group row">
        <label class="col-md-{% if span==12 %}2{% else %}4{% endif %} col-form-label text-sm-left text-md-right">{{ lang(def.label) }}{% if required %}<span style="color:red">*</span>{% endif %}</label>
        <div class="col-md-{% if span==12 %}10{% else %}8{% endif %}">
            {% set required=(required?'required':'') %}
            {{ ffield_multirelate(name,def.rel_table,required,value,value_display)|raw }}
        </div>
    </div>
</div>