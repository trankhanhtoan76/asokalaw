{% extends "app/base.twig" %}
{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2 mt-2">
                <div class="col-md-9">
                    {{ breakcrum('module_name',app.record.name)|raw }}
                </div>
                <div class="col-md-3 text-left text-md-right mt-2 mt-md-0">
                    <div class="btn-group">
                        <a href="{{ base_url }}/admin/module_name/{{ app.record.id }}/edit" type="button" class="btn btn-primary btn-flat">{{ lang('LBL_EDIT') }}</a>
                        <button type="button" class="btn btn-primary btn-flat dropdown-toggle dropdown-icon" data-toggle="dropdown">
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-md-left" role="menu">
                                <a class="dropdown-item" onclick="window.location.href='{{ base_url }}/admin/module_name/layout/create'">{{lang('LBL_CREATE')}}</a>
                                <a class="dropdown-item" onclick="window.location.href='{{ base_url }}/admin/module_name'">{{lang('LBL_LIST')}}</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" onclick="deleteRecord('module_name','{{ app.record.id }}')">{{lang('LBL_DELETE')}}</a>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ lang('LBL_GENERAL_INFO') }}</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label text-md-left text-md-right">{{ lang(app.db.def.module_name.name.label)}}</label>
                                <div class="col-md-10 col-form-value">
                                    {{ vfield_text('name',app.record.name)|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label text-md-left text-md-right">{{ lang(app.db.def.module_name.description.label)}}</label>
                                <div class="col-md-10 col-form-value">
                                    {{ vfield_editor('description',app.record.description)|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}