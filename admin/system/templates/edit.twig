{% extends "app/base.twig" %}
{% block content %}
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2 mt-2">
                <div class="col-md-9">
                    {{ breakcrum('module_name','Sá»­a',app.record.name)|raw }}
                </div>
                <div class="col-md-3 text-left text-md-right mt-2 mt-md-0">
                    <a href="{{ base_url }}/admin/module_name/{{ app.record.id }}" class="btn btn-outline-danger">{{ lang('LBL_CANCEL') }}</a>
                    <button type="button" onclick="formOnSubmit('{{ base_url }}/admin/module_name/{{ app.record.id }}/save')" class="btn btn-primary">{{ lang('SAVE') }}</button>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ lang('LBL_GENERAL_INFO') }}</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label text-sm-left text-md-right">{{ lang(app.db.def.module_name.name.label)}} (*)</label>
                                <div class="col-md-10">
                                    {{ ffield_text('name',app.record.name,'required')|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label class="col-md-2 col-form-label text-sm-left text-md-right">{{ lang(app.db.def.module_name.description.label)}}</label>
                                <div class="col-md-10">
                                    {{ ffield_editor('description',app.record.description)|raw }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}